@model IEnumerable<SMS.DATA.EF.Courses>

@{
    ViewBag.Title = "Courses";
}

<div class="container">
    <p>
        @Html.ActionLink("ADD NEW COURSE", "Create", new { @class = "action" })
    </p>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CourseName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseDescription)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseName)
                    </td>
                    <td>
                        @Html.ActionLink(item.CourseDescription, "Details", new { id = item.CourseID })
                        @*@Html.DisplayFor(modelItem => item.CourseDescription)*@
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>*@
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CourseID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CourseID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
}
