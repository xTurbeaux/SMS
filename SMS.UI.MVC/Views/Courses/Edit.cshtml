@model SMS.DATA.EF.Courses

@{
    ViewBag.Title = "Edit";
}

<h2 class="col-12 text-center tm-section-title">Modify Course</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div @*class="form-horizontal"*@>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CourseID)

        <div class="row tm-welcome-section">
            @Html.LabelFor(model => model.CourseName, htmlAttributes: new { @class = "col-12 text-center" })
            <div class="row tm-welcome-section m">
                @Html.EditorFor(model => model.CourseName, new { htmlAttributes = new { @class = "form-control text-center" } })
                @Html.ValidationMessageFor(model => model.CourseName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row tm-welcome-section">
            @Html.LabelFor(model => model.CourseDescription, htmlAttributes: new { @class = "col-12 text-center" })
            <div class="row tm-welcome-section m">
                @Html.EditorFor(model => model.CourseDescription, new { htmlAttributes = new { @class = "form-control text-center" } })
                @Html.ValidationMessageFor(model => model.CourseDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row tm-welcome-section">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "col-12 text-center" })
            <div class="row tm-welcome-section">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsActive)
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row tm-welcome-section">
            <div class="row tm-welcome-section">
                <input type="submit" value="Save" class="col-12 text-center tm-paging-link" />
            </div>
        </div>
    </div>
}

<div class="row tm-welcome-section">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
